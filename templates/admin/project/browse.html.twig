{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{parent()}} | Projets{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <h1>Liste des projets effectu√©s ou en cours :</h1>
            <div><a href="{{ path('project_add') }}" class="btn btn-secondary">Ajouter</a></div>
            <table class="table table-dark">
                <thead class="text-warning">
                    <th>ID</th>
                    <th>Nom du projet</th>
                    <th>Description du projet</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                    <th scope="row">{{ project.id }}</th>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    {# <td class="d-block">
                        {% for stack in project.stack %}
                            <img src="{{ asset('images/' ~ stack.image) }}" alt=" {{ stack.name }}">
                        {% endfor %}
                    </td> #}
                    <td class="d-block">                    
                        <a class="btn btn-primary" href="{{ path('project_edit', {id: project.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                        <form action="{{ path('project_delete', {id: project.id}) }}" method="post" class="d-inline">
                            <button class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </button>
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </td>
                    </tr>
                {% endfor %}  
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
