{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{parent()}} | Expériences{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <h1>Liste des expériences professionnelles :</h1>
            <div><a href="{{ path('experience_add') }}" class="btn btn-secondary">Ajouter</a></div>
            <table class="table table-dark">
                <thead class="text-warning">
                    <th>ID</th>
                    <th>Poste</th>
                    <th>Entreprise</th>
                    <th>Période</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                {% for experience in experiences %}
                    <tr>
                    <th scope="row">{{ experience.id }}</th>
                    <td>{{ experience.getName() }}</td>
                    <td>{{ experience.getCompany() }}</td>
                    <td>De {{ experience.startedAt|date('M Y') }} à {{ experience.endedAt|date('M Y') }}
                    <td class="d-block">                    
                        <a class="btn btn-primary" href="{{ path('experience_edit', {id: experience.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                        <form action="{{ path('experience_delete', {id: experience.id}) }}" method="post" class="d-inline">
                            <button class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </button>
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </td>
                    </tr>
                {% endfor %}  
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
